<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_expense_carrel" model="ir.ui.view">
            <field name="name">hr.expense.carrel.form</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <!-- Adding the template_id field after the street field -->
                <xpath expr="//field[@name='date']" position="after">
                    <field name="company_carrel"></field>
                    <field name="expense_code"></field>
                    <field name="vendor"/>
                    <field name="received_status"></field>
                    <field name="order_for_who" string="Order For Who"></field>
                    <field name="paid_date" string="Paid Date"></field>
                    <field name="received_by"></field>
                </xpath>
                <xpath expr="//field[@name='payment_mode']" position="before">
                    <field name="pay_type"></field>
                    <!-- <field name="expense_code"></field> -->
                    <!-- <field name="vendor"/> -->
                    <!-- <field name="order_for_who" string="Order For Who"></field>
                    <field name="paid_date" string="Paid Date"></field> -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>