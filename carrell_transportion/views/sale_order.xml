                        <field name="fc_type"/>
                    </div>
                    <div style="flex: 1; min-width: 10%;">
                        <label for="fc_price">FC Price</label>
                        <field name="fc_price"/>
                    </div>
                </div>

                <div style="display: flex; width: 100%; flex-wrap: wrap; gap: 10px; margin-top: 0px;">
                    <!-- Delivery To City -->
