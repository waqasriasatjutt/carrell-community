<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_report_paperformate_id" model="report.paperformat">
        <field name="name">European A4 Landscape</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>

    <report
            id="action_sale_contract"
            model="sale.order"
            string="Rental Contract "
            report_type="qweb-pdf"
            name="gt_rental_management.sale_contract_qweb_report_rental"
            file="gt_rental_management.sale_contract_qweb_report_rental"
            print_report_name="'Rental Contract - %s' % (object.name)"
    />


    <record id="gt_rental_management.action_sale_contract" model="ir.actions.report">
        <field name="paperformat_id" ref="custom_report_paperformate_id"/>
    </record>


</odoo>
