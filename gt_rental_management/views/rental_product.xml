				        <group col='2'>
				            <field name="list_price" string="Monthly Rental"/>
			            </group>
			            <group col='2'>
				            <field name="replacement_value"/>
				        </group>
			        </group>
			        <group string="Rental Product Description">
			        	<field name="description"/>
			        </group>
			    </page>
		   </xpath>
