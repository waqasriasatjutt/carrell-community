<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherited_extend" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]" position="inside">
         	 	<h2>Rental Configuration</h2>
	       	 	<div class="row mt16 o_settings_container">
	                   <div class="col-xs-12 col-md-6 o_setting_box">
	                   		<div>
	                       	</div>
	                       <div class="o_setting_right_pane">
	                       		<label for="reminder_days"/>
	                           <div class="text-muted">
	                              Set the day for reminder for rental expiration mail
	                           </div>
	                           <div class="mt16">
	                               <field name="reminder_days"/>
	                           </div>
	                       </div>
	                   </div>
	                  </div>
            </xpath>
        </field>
    </record>

</odoo>