<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inheriting Sale Order Form View -->
        <record id="view_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="gt_rental_management.view_order_form_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <!-- Your Custom Button -->
                   <group> 
                        <field  name="goformz_status" string="GOFORMZ Status"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='start_date']" position="replace">
                    <!-- Your Custom Button -->
                   <group> 
                        <field  name="start_date" string="Del Date"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='end_date']" position="replace">
                    <!-- Your Custom Button -->
                   <group> 
                        <field  name="end_date" string="By"/>
                    </group>
                </xpath>
                <xpath expr="//group[@name='sale_header']" position="after">
                    <group name="name-1" string="string">
                        <group >
                            
                        </group>
                        <group >
                            <field name="customer_note" string="Customer Note"/>
                            <field name="delivery_note" string="Delivery Note"/>
                            <field name="site_note" string="Site Note"/>
                            <field name="door" string="Door"/>
                            <field name="plug" string="Plug"/>
                            <field name="quantity_total" string="Total Quantity"/>
                        </group >

                    </group>                    
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="before">
                    <!-- Your Custom Button -->
                    <button string="Create GoFormz Contract" type="object" name="action_goformz" class="oe_highlight"/>
                    <button string="Update Contracts From Goformz" type="object" name="action_update_from_goformz" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
