<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define action for follower defaults -->
    <record id="action_follower_defaults" model="ir.actions.act_window">
        <field name="name">Follower Defaults</field>
        <field name="res_model">mail.message.subtype</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Define menu item for follower defaults -->
    <menuitem id="menu_follower_defaults" name="Follower Defaults" parent="project.menu_project_config"/>
    <menuitem id="menu_follower_defaults_list" name="Follower Defaults" parent="menu_follower_defaults" action="action_follower_defaults"/>
</odoo>
